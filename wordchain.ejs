<body>
  <div class="word">칸쵸</div>
  <input type="text" name="answer" onkeypress="enter()"><button onclick="next()">확인</button>
  
  <script>
    // 엔터키 입력
    function enter(){
      if(event.key === 'Enter'){
        next();
      };
    }
    
    function next(){ 
      const preWord = document.querySelector('.word');
      const word = document.querySelector('.word').textContent;
      const answer = document.querySelector('input[name=answer]');
      
      if(word[word.length -1] === answer.value[0]){
        preWord.innerHTML = answer.value;
        answer.value = '';
      } else {
        alert('땡');
      }
    }
  </script>
</body>